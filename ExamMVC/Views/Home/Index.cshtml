
@{
    ViewData["Title"] = "Category";
    
}
@model IEnumerable<Exam.Entities.Products>
<button type="button" onclick="$('#CategoryModal').modal('show')" class="btn btn-primary" data-toggle="modal">Add Products</button>
<table class="table table-hover">
    <thead>
        <th scope="col">Name</th>
        <th scope="col">Price</th>
        <th scope="col">Create Date</th>
        <th scope="col">Properties</th>
        <th scope="col">quantity</th>
        <th scope="col"></th>
    </thead>
    <tbody>
        @foreach (var item in @ViewBag.Product)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Properties</td>
                <td>@item.quantity</td>
                <td><a class="btn btn-danger" asp-route-id="@item.Id" asp-action="RemoveProduct">Sil</a></td>
                <td><button type="button" onclick="UpdateModel(@item.Id,'@item.Name','@item.Price','@item.Properties','@item.quantity' )" class="btn btn-primary" data-toggle="modal">Update</button></td>
            </tr>
        }
    </tbody>
</table>
<div class="modal" id="CategoryModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Products</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="/Home/AddProduct" method="post">
                <div class="modal-body">
                    <div class="form-group">
                        <input type="hidden" name="Id" class="form-control" />
                        <input type="text" name="Name" class="form-control" placeholder="Product Name" />
                        <input type="text" name="Price" class="form-control" placeholder="Price" />
                      @*  <input type="text" name="CreateDate" class="form-control" placeholder="CreateDate" />*@
                        <input type="text" name="Properties" class="form-control" placeholder="property" />
                        <input type="text" name="quantity" class="form-control" placeholder="quentity" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal" id="ProductUpdateModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update Products</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="/Home/UpdateProduct" method="post">
                <div class="modal-body">
                    <div class="form-group">
                        <input type="hidden" name="Id" id="UpdateId" class="form-control" />
                       
                     <input type="text" name="Name" id="UpdateName"  class="form-control" placeholder="product Name" />
                        <input type="text" name="Price"  class="form-control" placeholder="Price" />
                       @* <input type="text" name="CreateDate" class="form-control" placeholder="CreateDate" />*@
                        <input type="text" name="Properties" class="form-control" placeholder="property" />
                        <input type="text" name="quantity" class="form-control" placeholder="quentity" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script type="text/javascript">
    function UpdateModel(Id,Name){
        
        $('#UpdateId').val(Id);
        $('#UpdateName').val(Name);
        $('#ProductUpdateModal').modal('show');
    }
    
</script>
